{
  "name": "Pi-hole",
  "version": "2025.10.3",
  "slug": "pihole",
  "description": "Network-wide Ad Blocking",
  "url": "https://github.com/casperklein/homeassistant-addons/tree/master/pi-hole",
  "image": "casperklein/homeassistant-pi-hole",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "ingress": true,
  "ingress_port": 0,
  "panel_icon": "mdi:pi-hole",
  "startup": "system",
  "auth_api": true,
  "host_network": true,
  "ports": {
    "80/tcp": null,
    "443/tcp": null
  },
  "ports_description": {
    "80/tcp": "HTTP port for the web interface (not required for Ingress)",
    "443/tcp": "HTTPS port for the web interface (not required for Ingress)"
  },
  "privileged": [
    "NET_ADMIN",
    "SYS_NICE",
    "SYS_TIME"
  ],
  "boot": "auto",
  "timeout": 60,
  "map": [
    "ssl"
  ],
  "options": {
    "dnscrypt": [],
    "update_gravity_on_start": false,
    "authentication": false,
    "certificate": "fullchain.pem",
    "certificate_key": "privkey.pem"
  },
  "schema": {
    "dnscrypt": [
      {
        "name": "str",
        "stamp": "str"
      }
    ],
    "update_gravity_on_start": "bool",
    "authentication": "bool",
    "certificate": "str?",
    "certificate_key": "str?"
  },
  "init": false,
  "backup_pre": "backup.sh pre",
  "backup_post": "backup.sh post"
}
